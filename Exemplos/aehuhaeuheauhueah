lista[0] = float(lista[0])
lista[1] = float(lista[1])
lista[2] = float(lista[2])
print ((lista[0] * 4.0)+ (lista[1] * 5.0) + (lista[2]*3.0))/5+3+4



Matheus e Davi

#include <stdio.h>
int main (void){
	float n1, n2, n3, med;
	printf ("Media de Notas \n"); 
	printf ("Insira primeira nota \n");
	scanf (" %f", &n1);
	printf ("Insira segunda nota \n");
	scanf (" %f", &n2);	
	printf ("Insira terceira nota \n");
	scanf (" %f", &n3);
	
		med =((n1*4) + (n2*5) + (n3*3))/12;
	
	printf ("A média é %0.f", med);
	

	
	
	
	
	return (0);
}




